<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="41dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="114dp"
            app:layout_constraintBottom_toTopOf="@+id/textoFrase"
            app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button
            android:text="NOVA FRASE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="gerarFrase"/>
    <TextView
            android:text="Pressione o botÃ£o Nova Frase para gerar uma frase!"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:id="@+id/textoFrase" android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="198dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="6dp" android:layout_marginRight="6dp" android:textAllCaps="true"/>
</android.support.constraint.ConstraintLayout>